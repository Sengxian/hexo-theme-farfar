<%- partial('_partial/article_list', { page: page }) %>
<div class="clear"></div>
<% if (page.total > 1) { %>
  <div class="pager common_width">
    <ul>
      <% for (var i = 1; i <= page.total; ++i) { %>
        <li>
          <% if (i == 1) { %>
            <% if (i == page.current) { %>
              <a href="/" class="current">
            <% } else { %>
              <a href="/">
            <% } %>
          <% } else { %>
            <% if (i == page.current) { %>
              <a href="/page/<%- i %>/" class="current">
            <% } else { %>
              <a href="/page/<%- i %>/">
            <% } %>
          <% } %>
          <%- i %>
        </a></li>
      <% } %>
    </ul>
  </div>
<% } %>
