<div class="post post_in_detail">
  <div class="post_header">
    <div class="common_width">
      <h2 class="post_title"><%- page.title %></h2>
      <% if (page.tags && page.tags.length) { %>
      <div class="tags">
        <% page.tags.forEach(function(tag) { %>
          <a href="/<%-tag.path%>">#<%- tag.name %></a>
        <% }); %>
      </div>
      <% } %>
      <span class="date">Published on <%- page.date.format("YYYY-MM-DD") %></span>
    </div>
  </div>
  <div class="common_width">
    <div class="post_body">
      <%- page.content %>
    </div>
  </div>
  <% if (page.prev || page.next) { %>
  <div class="other_posts">
    <div class="common_width">
      <% if (page.prev) { %>
        <a href="/<%- page.prev.path %>" class="pre"><i class="fa fa-arrow-circle-left"></i><span><%- page.prev.title %></span></a>
      <% } %>
      <% if (page.next) { %>
        <a href="/<%- page.next.path %>" class="next"><span><%- page.next.title %></span><i class="fa fa-arrow-circle-right"></i></a>
      <% } %>
      <div class="clear"></div>
    </div>
  </div>
  <% } %>
</div>
<div class="common_width">
  <div id="fb_comments_container">
    <div id="disqus_thread"></div>
    <script type="text/javascript">var disqus_shortname ='<%- theme.disqus_shortname %>';var disqus_identifier ='<%- page.path %>';(function() {var dsq =document.createElement('script');dsq.type ='text/javascript';dsq.async =true;dsq.src ='//' + disqus_shortname + '.disqus.com/embed.js';(document.getElementsByTagName('head')[0] ||document.getElementsByTagName('body')[0]).appendChild(dsq);})();</script>
  </div>
</div>
